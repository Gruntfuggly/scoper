{
    "name": "scoper",
    "displayName": "Scoper",
    "description": "Highlight the current bracket scope",
    "version": "0.0.10",
    "icon": "scoper.png",
    "publisher": "Gruntfuggly",
    "engines": {
        "vscode": "^1.5.0"
    },
    "repository": "https://github.com/Gruntfuggly/scoper",
    "categories": [
        "Other"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Scoper",
            "properties": {
                "scoper.highlightColor": {
                    "type": "string",
                    "description": "Color for highlighting current scope",
                    "default": "#003300"
                },
                "scoper.endColor": {
                    "type": "string",
                    "description": "Color for highlighting the ends of the current scope",
                    "default": "#ff000080"
                },
                "scoper.overviewColor": {
                    "type": "string",
                    "description": "Color for showing current scope in the overview",
                    "default": "#0000aa"
                },
                "scoper.extendHighlight": {
                    "type": "boolean",
                    "description": "Set to true to extend the highlight range to highlight whole lines. This can be useful when used in conjunction with the end highlights.",
                    "default": false
                },
                "scoper.parentheses": {
                    "type": "boolean",
                    "description": "Show scope for parentheses.",
                    "default": true
                },
                "scoper.braces": {
                    "type": "boolean",
                    "description": "Show scope for braces.",
                    "default": true
                },
                "scoper.squareBrackets": {
                    "type": "boolean",
                    "description": "Show scope for square brackets.",
                    "default": true
                },
                "scoper.languages": {
                    "type": "object",
                    "description": "Language specific enable/disable flags"
                }
            }
        }
    },
    "activationEvents": [
        "*"
    ],
    "main": "./extension",
    "__metadata": {
        "id": "1ca6e13c-2a8b-42fc-af5c-8e8db0bb9e58",
        "publisherDisplayName": "Gruntfuggly",
        "publisherId": "d4906d2e-f2ee-492d-9c7c-02b6160599ec"
    }
}